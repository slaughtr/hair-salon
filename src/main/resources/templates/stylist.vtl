<!-- begin stylist.vtl -->
<h1>$stylist.getStylistName()</h2>
  <br>
  <h3>Current number of clients: $clients.size()</h3>
  <br><br>
  <h2>Specialty: $stylist.getStylistSpecialty()</h2>
  <form action="/stylists/$stylist.getStylistId()/update" method="post">
    <label for="name">Stylist name:</label>
    <input type="text" name="name" value="$stylist.getStylistName()" required>
    <label for="specialty">Stylist's specialty:</label>
    <input type="text" name="specialty" value="$stylist.getStylistSpecialty()" required>
  </form>

<h3>Currently assigned clients:</h3>
<link href="/table.css" rel="stylesheet">
<div class="container tableContainerSmall">
  <div class="row clearfix">
    <table class="tasks" cellspacing="0">
      <thead>
        <tr>
          <th>Name</th>
          <th>Appointment date</th>
          <th>Appointment time</th>
          <th>Stylist selected</th>
          <th>Remove client</th>
        </tr>
      </thead>
      <tbody>
        #foreach ($client in $clients)
        <tr>
          <td><a href="/clients/$client.getClientId()">$client.getClientName()</a></td>
            <td>$client.getClientAppointmentDate()</td>
            <td>$client.getClientAppointmentTime()</td>
            <td>$client.getAssignedStylistName()</td>
            <td><form action="/clients/$client.getClientId()/delete" method="post">
              <button type="submit" class="btn btn-danger">Delete client</button>
            </form></td>
          </tr>
          #end
          </tbody>
        </table>
      </div>
    </div>

    <!-- end stylist.vtl -->
